<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"



        >
        <ImageView
            android:id="@+id/imageadd"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:src="@drawable/admin"
            android:alpha="0.25"
            android:layout_centerInParent="true"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".addViolation">

                <Space
                    android:id="@+id/space1_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_number_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Plugged Number :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/num_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />

                <Space
                    android:id="@+id/space2_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_driver_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Violation Type :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints=" "
                    android:background="@drawable/edittext_style"
                    tools:ignore="MissingConstraints"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"
                    android:layoutDirection="ltr"
                    />
                <Space
                    android:id="@+id/space3_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_type_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Date :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/type_addviolation"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="datetime"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space4_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_category_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Location :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/category_addviolation"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space6_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_rdate_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Is Payd ? :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/pdate_addviolation"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"

                    >
                    <RadioButton
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        />
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        />
                    <RadioButton
                        android:id="@+id/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        />

                </RadioGroup>
                <Space
                    android:id="@+id/space7_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    >



                </LinearLayout>
                <Space
                    android:id="@+id/space8_addviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />
                <Button
                    android:id="@+id/button2_addviolation"
                    android:layout_marginVertical="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:shadowColor="#6A020202"
                    android:background="#A44548ED"
                    android:textColor="#ffffff"
                    android:text="- ADD -"
                    android:onClick="addviolation1"/>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/progressBar_addviolation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#9Affffff"


            >
            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9Affffff"

                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>