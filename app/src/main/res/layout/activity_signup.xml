<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:id="@+id/imagesignup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:src="@drawable/traffic"
            android:alpha="0.25"
            android:layout_centerInParent="true"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".SignupActivity">

                <Space
                    android:id="@+id/space1_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_number_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Plugged Number"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/num_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />

                <Space
                    android:id="@+id/space2_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_driver_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Driver Name"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/name_signup"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space3_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_type_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Type"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/type_signup"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space4_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_category_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Vehicle category"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/category_signup"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space6_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_rdate_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Production date"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/pdate_signup"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"
                    android:onClick="showdialoge1"

                    />
                <Space
                    android:id="@+id/space7_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_iscross_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Registeration date"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/rdate_signup"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"
                    android:onClick="showdialoge2"

                    />
                <Space
                    android:id="@+id/space5_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    >
                    <CheckBox
                        android:id="@+id/iscross_signup"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start">
                    </CheckBox>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp">

                    </Space>
                    <TextView
                        android:id="@+id/textView_pdate_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="is Crossed Out"
                        android:textColor="#A9000000"
                        android:textSize="15dp"
                        android:layout_gravity="end"
                        />



                </LinearLayout>
                <Space
                    android:id="@+id/space8_signup"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />
                <Button
                    android:id="@+id/button2_signup"
                    android:layout_marginVertical="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:shadowColor="#6A020202"
                    android:background="#A44548ED"
                    android:textColor="#ffffff"
                    android:text="- signup -"
                    android:onClick="signup1"/>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/progressBar_signup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#9Affffff"


            >
            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9Affffff"

                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>