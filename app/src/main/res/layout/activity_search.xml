<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"

        >
        <ImageView
            android:id="@+id/imagesearch2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:src="@drawable/admin"
            android:alpha="0.25"
            android:layout_centerInParent="true"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".searchViolation">
                <Space
                    android:id="@+id/space1_searchviolation3"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />
                <TextView
                    android:id="@+id/textView_title_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Plugged Number :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />
                <Space
                    android:id="@+id/space1_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_number_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Plugged Number :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/num_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />

                <Space
                    android:id="@+id/space2_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_driver_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Driver Name :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />
                <EditText
                    android:id="@+id/driver_searchviolation"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />

                <Space
                    android:id="@+id/space3_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_type_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Date :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/date_searchviolation"
                    android:layout_marginHorizontal="10dp"
                    android:inputType="datetime"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space4_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <TextView
                    android:id="@+id/textView_category_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Location :"
                    android:textColor="#A9000000"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/location_searchviolation"
                    android:layout_marginHorizontal="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=" "
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/edittext_style"
                    android:textAlignment="center"
                    android:paddingHorizontal="10dp"
                    android:textColor="#A9000000"

                    />
                <Space
                    android:id="@+id/space6_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />


                <Space
                    android:id="@+id/space7_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />



                <Space
                    android:id="@+id/space8_searchviolation"
                    android:layout_width="match_parent"
                    android:layout_height="20px" />
                <Button
                    android:id="@+id/button2_searchviolation"
                    android:layout_marginVertical="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="10dp"
                    android:shadowColor="#6A020202"
                    android:background="#A44548ED"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    android:text="- search -"
                    android:onClick="search"/>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/progressBar_searchviolation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#9Affffff"


            >
            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9Affffff"

                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>